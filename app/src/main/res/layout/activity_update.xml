<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UpdateActivity"
        android:layout_margin="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Updatetoolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="Update"
            android:background="@color/teal_700"
            app:navigationIcon="@drawable/arrow_back_24"
            android:layout_alignParentTop="true"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="50dp">


            <EditText
                android:id="@+id/idTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="#323D45"
                android:background="@drawable/background_round" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    style="@style/TEXT"
                    android:text="Priority"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical" />


                <ImageView
                    android:id="@+id/priority_green"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:background="@drawable/priority_green" />


                <ImageView
                    android:id="@+id/priority_yellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:background="@drawable/priority_yello" />


                <ImageView
                    android:id="@+id/priority_red"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:background="@drawable/priority_red" />

            </LinearLayout>



            <EditText
                android:id="@+id/idNote"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:minHeight="100dp"
                android:ems="10"
                android:textAlignment="viewStart"
                android:inputType="textMultiLine"
                android:imeOptions="flagNoEnterAction"
                android:hint="Type Here"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="#323D45"
                android:background="@drawable/background_round" />

        </LinearLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:src="@drawable/ic_done_24"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>
</layout>